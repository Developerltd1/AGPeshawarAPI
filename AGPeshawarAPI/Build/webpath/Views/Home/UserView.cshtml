@model List<ModelLayer.MainModelView.UserInfoModel>
    @{ 
        ViewBag.Title = "User List";
    }
<div class="row">
    <div class="col-xl-12">
        <!-- START card-->
        <div class="card card-default" id="cardDemo14">
            <div class="card-header">User List</div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <div>@Html.ActionLink("Add New User", "Index", null, new {@class = "btn btn-primary" })</div>
                        <hr />
                        <table class="table table-striped my-4 w-100 table-responsive table-hover" id="datatable2">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Email Address
                                    </th>
                                    <th>
                                        Coin
                                    </th>
                                    
                                    <th>
                                        Status
                                    </th>
                                    
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ 
                                    foreach (var item in Model)
                                    {
                                        <tr>

                                            
                                            <td>
                                              
                                            </td>
                                            <td>
                                                @item.email
                                            </td>
                                            <td>
                                                @item.coins
                                            </td>
                                            <td>
                                                @item.vipStatus
                                            </td>


                                            <td>
                                                @Html.ActionLink("Edit", "UserEdit",null, new { @class ="mb-1 btn btn-warning" })
                                                @*@Html.ActionLink("Detail", "UserDetail", new { UserID = item.UserID }, new { @class = "mb-1 btn btn-primary" })*@
                                            </td>
                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
