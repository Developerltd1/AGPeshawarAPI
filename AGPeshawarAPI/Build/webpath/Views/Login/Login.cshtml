@model ModelLayer.User.LoginModel.RequestTest

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Veiw Plus Booster Login</title>
    <!-- =============== VENDOR STYLES ===============-->
    <!-- FONT AWESOME-->
    <link rel="stylesheet" href="~/Content/Template/vendor/font-awesome/css/font-awesome.css">
    <!-- SIMPLE LINE ICONS-->
    <link rel="stylesheet" href="~/Content/Template/vendor/simple-line-icons/css/simple-line-icons.css">
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link rel="stylesheet" href="~/Content/Template/css/bootstrap.css" id="bscss">
    <!-- =============== APP STYLES ===============-->
    <link rel="stylesheet" href="~/Content/Template/css/app.css" id="maincss">
</head>

<body>

    @{
        if (TempData["Message"] != null)
        {
            <div id="divMessage" class="alert alert-success d-inline-flex" role="alert">
                <strong>Fail !</strong>Record Not Found.
            </div>
        }
    }

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="wrapper">
        <div class="block-center  wd-xl pt-5 mt-5">


            <!-- START card-->
            <div class="card card-flat pt-5 mt-5" >
                <div class="card-header text-center ">
                    <h1>Login</h1>
                    @*<a href="#">
                        <img class="block-center rounded" src="~/Content/Template/img/logo.png" alt="Image">
                    </a>*@
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="card-body">
                        <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
                        <div class="form-group">
                            <div class="input-group with-focus">
                                @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control border-right-0", @placeholder = "Enter Email Address" })
                                <div class="input-group-append">
                                    <span class="input-group-text fa fa-envelope text-muted bg-transparent border-left-0"></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "parsley-required" })

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group with-focus">
                                @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control border-right-0", @placeholder = "Enter Password", @type = "password" })
                                <div class="input-group-append">
                                    <span class="input-group-text fa fa-lock text-muted bg-transparent border-left-0"></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "parsley-required" })

                            </div>
                        </div>
                        <h4 class="text-danger">@ViewBag.ErrorMessage</h4>
                        <div class="clearfix">
                            <div class="checkbox c-checkbox float-left mt-0">
                                <label>
                                    <input type="checkbox" value="" name="remember">
                                    <span class="fa fa-check"></span>Remember Me
                                </label>
                            </div>
                            <div class="float-right">
                                <a class="text-muted" href="recover.html">Forgot your password?</a>
                            </div>
                        </div>
                        <button class="btn btn-block btn-primary mt-3" type="submit">Login</button>
                    </div>
                }
            </div>
            <!-- END card-->
            <div class="p-3 text-center">
                <span class="mr-2">&copy;</span>
                <span>2023</span>
                <span class="mr-2">-</span>
                <span>Copyrights </span>
                <br>
                <span>11 Sol Technologies</span>
            </div>
        </div>
    </div>

    <!-- =============== VENDOR SCRIPTS ===============-->
    <!-- MODERNIZR-->
    <script src="~/Content/Template/vendor/modernizr/modernizr.custom.js"></script>
    <!-- JQUERY-->
    <script src="~/Content/Template/vendor/jquery/dist/jquery.js"></script>
    <!-- BOOTSTRAP-->
    <script src="~/Content/Template/vendor/bootstrap/dist/js/bootstrap.js"></script>
    <!-- STORAGE API-->
    <script src="~/Content/Template/vendor/js-storage/js.storage.js"></script>
    <!-- PARSLEY-->
    <script src="~/Content/Template/vendor/parsleyjs/dist/parsley.js"></script>
    <!-- =============== APP SCRIPTS ===============-->
    <script src="js/app.js"></script>

    <script>
        $(document).ready(function () {
            $("#divMessage").delay(2000).slideUp(500);
        });

    </script>

</body>

</html>


