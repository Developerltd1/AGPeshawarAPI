@model ModelLayer.MainModelView.UserInfoModel

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- START card-->
<div class="card card-default col-md-6">
    <div class="card-header">Add User to App </div>
    <div class="card-body offset-1">
        @using (Html.BeginForm("AddMobileUser", "UserManagement"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-lg-8">
                        <label class="col-form-label">Coins *</label>
                        @Html.TextBoxFor(model => model.coins, new { @class = "form-control", @placeholder = "Enter No of Coins" })
                        @Html.ValidationMessageFor(m => m.coins, "", new { @class = "parsley-required" })
                    </div>
                    <div class="col-lg-8">
                        <label class="col-form-label">Email Address *</label>
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = "Enter Email Address" })
                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "parsley-required" })
                    </div>
                    <div class="col-lg-8">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-form-label">VipStatus *</label>
                                <div class="col-md-10">
                                    <div class="form-check">
                                        @Html.RadioButtonFor(model => model.vipStatus, "false", new { @class = "form-check-input", @id = "exampleRadios1", @type = "radio", @name = "exampleRadios" , @value = "option1" ,@checked= ""})
                                        <label class="form-check-label" for="exampleRadios1">False</label>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-check">
                                        @Html.RadioButtonFor(model => model.vipStatus, "true", new { @class = "form-check-input", @id = "exampleRadios2", @type = "radio", @name = "exampleRadios" })
                                        <label class="form-check-label" for="exampleRadios2">True</label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div> 
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
