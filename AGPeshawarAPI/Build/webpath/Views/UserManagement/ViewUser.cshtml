@model IEnumerable<ModelLayer.NewUser.GetUserRecord>

@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="card-title">View User</div>
    </div>
    <div class="card-body">
        <div>@Html.ActionLink("Add New User", "AddUser", null, new { @class = "btn btn-primary" })</div>
        <br />
        <div class="card card-default">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped my-4 w-100" id="datatable2">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        @*<th>Password</th>*@
                                        <th>Role</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    
                                    <tr>
                                        <td style="display:none">
                                            @item.RoleId
                                        </td>
                                        <td>
                                            @item.UserId
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        @*<td>
                                            @item.UserPassword
                                        </td>*@
                                        <td>
                                            @item.Role
                                        </td>

                                        <!--<td>-->
                                            @*@Html.ActionLink("Edit",null, null, new { @onclick = "Edit( item.WebUserGenetaredID )" , @class = "mb-1 btn btn-warning" })*@
                                            @*<a href="" class="mb-1 btn btn-warning" onclick="btnEdit(@item.UserID)">Edit</a>*@
                                            <!--<a href="@Url.Action("EditUser", "UserManagement", new { UserId =@item.UserId })" class='btn btn-info'>
                                                <i class='fa fa-pencil'></i>
                                            </a>

                                            <a href="@Url.Action("DeleteUser", "UserManagement", new { UserId =@item.UserId })" class='btn btn-danger'>
                                                <i class='fa fa-trash'></i>
                                            </a>
                                        </td>-->
                                    </tr>
                                }
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script>
        $(document).ready(function ()
        {

        });//Ready

        function btnEdit(UserID)
        {
            var route = '@Url.Action("EditUser", "UserManagement")?UserID=' + UserID
            window.location.href = route;
        }
        </script>
    }
