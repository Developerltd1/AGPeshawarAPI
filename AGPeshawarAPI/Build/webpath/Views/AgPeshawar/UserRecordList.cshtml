@model IEnumerable<ModelLayer.GetUserDataList>


@{
    ViewBag.Title = "UserRecordList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="card-title">User Records</div>
    </div>
    <div class="card-body">
        <br />
        <div class="card card-default">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped my-4 w-100" id="datatable2">
                                <thead>
                                    <tr>
                                        <th>Applicant Name</th>
                                        <th>Relation Type</th>
                                        <th>Relation Name</th>
                                        <th>CNIC</th>
                                        <th>Age</th>
                                        <th>Gender</th>
                                        <th>Religion</th>
                                        <th>Status</th>
                                        <th>Family Members</th>
                                        <th>Men</th>
                                        <th>Women</th>
                                        <th>Children</th>
                                        <th>Current Monthly Income</th>
                                        <th>Source Of Income</th>
                                        <th>Contact</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    @item.UserDetailId
                            <tr>
                                <td>
                                    @item.Applicant_name
                                </td>
                                <td>
                                    @item.Relation_type
                                </td>
                                <td>
                                    @item.Relation_name
                                </td>
                                <td>
                                    @item.Cnic
                                </td>
                                <td>
                                    @item.Age
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>
                                    @item.Religion
                                </td>
                                <td>
                                    @item.Status
                                </td>
                                <td>
                                    @item.No_of_family_members
                                <td>
                                    @item.No_of_men
                                </td>
                                <td>
                                    @item.No_of_women
                                </td>
                                <td>
                                    @item.No_of_children
                                </td>
                                <td>
                                    @item.Current_monthly_income
                                <td>
                                    @item.Source_of_income
                                </td>
                                <td>
                                    @item.Contact
                                </td>
                                <td>
                                    <a href="@Url.Action("UserRecordList", "AgPeshawar", new { Id =@item.UserDetailId })" class='btn btn-info'>
                                        <i class='fa fa-pencil'></i>
                                        More Info
                                    </a>

                                </td>
                            </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function ()
        {

        });//Ready

        function btnEdit(UserID)
        {
            var route = '@Url.Action("EditUser", "UserManagement")?UserID=' + UserID
            window.location.href = route;
        }
    </script>
}
